<Page x:Class="Marathon.Pages.MainMenu.DetailedInfo.RunnerCardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marathon.Pages.MainMenu.DetailedInfo"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Loaded="Page_Loaded"
      Title="RunnerCardPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2.3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="2" Style="{StaticResource headerTextBlock}">Карточка бегуна</TextBlock>
        <!--личная информация бегуна-->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="5" Orientation="Vertical" HorizontalAlignment="Left">
            <Image HorizontalAlignment="Center" Width="130" Height="150" Source="{Binding RunnerImage}"></Image>
            <TextBlock FontWeight="Medium" Style="{StaticResource mainTextBlock}">Имя: <Run FontWeight="Normal" Text="{Binding FullName}"></Run></TextBlock>
            <TextBlock FontWeight="Medium" Style="{StaticResource mainTextBlock}">Страна: <Run FontWeight="Normal" Text="{Binding Country.CountryName}"></Run></TextBlock>
            <TextBlock FontWeight="Medium" Style="{StaticResource mainTextBlock}">Возраст: <Run FontWeight="Normal" Text="{Binding Age}"></Run></TextBlock>
        </StackPanel>
        <!--результаты прошлых забегов-->
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1">
            <TextBlock Style="{StaticResource descriptionTextBlock}">Прошлые результаты бегуна</TextBlock>
            <DataGrid x:Name="RaceResults" CanUserAddRows="False" AutoGenerateColumns="False" CanUserDeleteRows="False" Width="540" MaxHeight="250">
                <DataGrid.Columns>
                    <DataGridTextColumn HeaderStyle="{StaticResource mainColumnHeader}" ElementStyle="{StaticResource mainTextBlock}" Width="70" Header="Место" Binding="{Binding GeneralPlace}"></DataGridTextColumn>
                    <DataGridTextColumn HeaderStyle="{StaticResource mainColumnHeader}" ElementStyle="{StaticResource mainTextBlock}" Width="100" Header="Время" Binding="{Binding Time}"></DataGridTextColumn>
                    <DataGridTextColumn HeaderStyle="{StaticResource mainColumnHeader}" ElementStyle="{StaticResource mainTextBlock}" Width="150" Header="Тип забега" Binding="{Binding Event.EventType.EventTypeName}"></DataGridTextColumn>
                    <DataGridTextColumn HeaderStyle="{StaticResource mainColumnHeader}" ElementStyle="{StaticResource mainTextBlock}" Width="210" Header="Марафон" Binding="{Binding Event.Marathon.MarathonName}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
