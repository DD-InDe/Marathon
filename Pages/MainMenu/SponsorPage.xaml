<Page x:Class="Marathon.Pages.SponsorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:olen ="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:local="clr-namespace:Marathon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Спонсор бегуна">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="2.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical">
            <TextBlock Style="{StaticResource headerTextBlock}">Спонсор бегуна</TextBlock>
            <TextBlock Width="600" Style="{StaticResource descriptionTextBlock}">Пожалуйста выберите бегуна, которого вы отели бы спонсировать и сумму, которую вы хотели бы спонсировать. Спасибо за вашу поддержку бегунов и их благотворительных учреждений.
            </TextBlock>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical">
                <TextBlock Style="{StaticResource headerTextBlock}">Информация о Спонсоре</TextBlock>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Right" Margin="4,6,4,6" Style="{StaticResource mainTextBlock}">Ваше имя:</TextBlock>
                        <TextBlock HorizontalAlignment="Right" Margin="4,6,4,6" Style="{StaticResource mainTextBlock}">Бегун</TextBlock>
                        <TextBlock HorizontalAlignment="Right" Margin="4,6,4,6" Style="{StaticResource mainTextBlock}">Карта:</TextBlock>
                        <TextBlock HorizontalAlignment="Right" Margin="4,6,4,6" Style="{StaticResource mainTextBlock}">Номер карты:</TextBlock>
                        <TextBlock HorizontalAlignment="Right" Margin="4,6,4,6" Style="{StaticResource mainTextBlock}">Срок действия:</TextBlock>
                        <TextBlock HorizontalAlignment="Right" Margin="4,8,4,6" Style="{StaticResource mainTextBlock}">CVC:</TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <olen:WatermarkTextBox x:Name="NameTextBox" Style="{StaticResource mainWTextBox}" Width="200" Watermark="Ваше имя"></olen:WatermarkTextBox>
                        <olen:WatermarkComboBox x:Name="RunnerComboBox" SelectionChanged="RunnerComboBox_SelectionChanged" Style="{StaticResource WComboBox}" Width="200" Height="24" Watermark="Выберите бегуна" Margin="4,5.5,4,4.5">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} {1} -  {2} ({3})">
                                                <Binding Path="Registration.Runner.User.FirstName"/>
                                                <Binding Path="Registration.Runner.User.LastName"/>
                                                <Binding Path="BibNumber"/>
                                                <Binding Path="Registration.Runner.Country.CountryName"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </olen:WatermarkComboBox>
                        <olen:WatermarkTextBox x:Name="NameOnCard" Style="{StaticResource mainWTextBox}" Width="200" Watermark="Имя владельца карты"></olen:WatermarkTextBox>
                        <olen:MaskedTextBox x:Name="CardNumber" Mask="0000 0000 0000 0000" Style="{StaticResource mainTextBox}" Height="24" Margin="4,4,4,4" HorizontalAlignment="Left" Width="120" VerticalContentAlignment="Center"></olen:MaskedTextBox>
                        <olen:MaskedTextBox x:Name="CardValidity" Mask="00 0000" Style="{StaticResource mainTextBox}" Height="24" Margin="4,4,4,4" HorizontalAlignment="Left" Width="50" VerticalContentAlignment="Center"></olen:MaskedTextBox>
                        <olen:MaskedTextBox x:Name="CVC" Mask="000" Style="{StaticResource mainTextBox}" Height="24" Margin="4,4,4,4" HorizontalAlignment="Left" Width="30" VerticalContentAlignment="Center"></olen:MaskedTextBox>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                <TextBlock Style="{StaticResource headerTextBlock}" TextAlignment="Center" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center">Благотворительность</TextBlock>
                <!--Организация-->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="CharityNameTextBlock" Style="{StaticResource mainTextBlock}"></TextBlock>
                    <!--Кнопка информации-->
                    <Button x:Name="InfoButton" Click="InfoButton_Click" Width="20" Height="20"  Background="Transparent" BorderBrush="Transparent">
                        <Image Width="15" Height="15" Source="/Resources/info_logo.png"></Image>
                    </Button>
                </StackPanel>
                <TextBlock Style="{StaticResource headerTextBlock}" FontSize="16" FontWeight="Bold">Сумма пожертвования</TextBlock>
                <!--Вывод суммы-->
                <TextBlock HorizontalAlignment="Center" x:Name="SumTextBlock" FontSize="40" Margin="5,10,5,10" FontWeight="Bold" Foreground="Gray"></TextBlock>
                <!--Изменение суммы-->
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button x:Name="MinusButton" Click="MinusButton_Click" Width="20" Height="20" >-</Button>
                    <olen:WatermarkTextBox MaxLength="7" PreviewTextInput="PreviewTextInput" x:Name="SumTextBox" TextChanged="SumTextBox_TextChanged" Width="70" Style="{StaticResource mainWTextBox}" HorizontalContentAlignment="Center"></olen:WatermarkTextBox>
                    <Button x:Name="PlusButton" Click="PlusButton_Click" Width="20" Height="20">+</Button>
                </StackPanel>
                <Button x:Name="PayButton" Click="PayButton_Click">Заплатить</Button>
            </StackPanel>
        </Grid>
