<Page x:Class="Marathon.Pages.RunnerPages.RegistrationConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marathon.Pages.RunnerPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Спасибо">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Style="{StaticResource headerTextBlock}">Спасибо за вашу регистрацию в качеству бегуна!</TextBlock>
            <TextBlock Style="{StaticResource descriptionTextBlock}">Спасибо за вашу регистрацию в качестве бегуна в Marathon Skills 2023!</TextBlock>
            <TextBlock Style="{StaticResource descriptionTextBlock}">С вами свяжутся по поводу оплаты.</TextBlock>
            <Button Width="70" Height="22" Margin="30" x:Name="OkButton" Click="OkButton_Click">ОК</Button>
        </StackPanel>
    </Grid>
</Page>
