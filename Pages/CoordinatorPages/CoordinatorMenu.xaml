<Page x:Class="Marathon.Pages.CoordinatorMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Marathon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню координатора">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center"  >
        <TextBlock Style="{StaticResource headerTextBlock}" Margin="40" FontWeight="Medium">Меню координатора</TextBlock>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="RunnersButton" Click="RunnersButton_Click" Style="{StaticResource bigButton}">Бегуны</Button>
                <Button x:Name="SponsorsButton" Click="SponsorsButton_Click" Style="{StaticResource bigButton}">Спонсоры</Button>
            </StackPanel>
        </StackPanel>
            
    </Grid>
</Page>
